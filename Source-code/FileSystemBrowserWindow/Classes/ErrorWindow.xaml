<Window ResizeMode="NoResize" ShowInTaskbar="False" SizeToContent="Height" Width="300" WindowStartupLocation="CenterOwner" x:Class="Emi.UserControls.ErrorWindow" x:ClassModifier="internal" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Margin="0, 0, 0, 5" Name="messageTextBlock"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Right" Margin="0, 5, 0, 0" Orientation="Horizontal">
            <Button Click="ActionButton_Click" IsCancel="True" IsDefault="True" Name="actionButton" Padding="15, 2"/>
        </StackPanel>
    </Grid>
</Window>