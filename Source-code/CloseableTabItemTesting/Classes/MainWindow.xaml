<Window Title="CloseableTabItemTesting" x:Class="Emi.UserControls.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <ResourceDictionary Source="/Properties/TestingResourceDictionary.xaml"/>
    </Window.Resources>
    <StackPanel Margin="4, 0, 4, 2">
        <GroupBox Header="CloseableTabItem">
            <WrapPanel>
                <CheckBox Content="IsCloseable" IsChecked="True" Name="isCloseableCheckBox"/>
            </WrapPanel>
        </GroupBox>
        <WrapPanel>
            <Button Click="AddButton_Click" Content="Add"/>
            <Button Click="ClearButton_Click" Content="Clear"/>
        </WrapPanel>
        <TabControl Name="tabControl"/>
    </StackPanel>
</Window>